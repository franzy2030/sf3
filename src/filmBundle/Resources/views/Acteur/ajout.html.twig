<h1 align="center">Ajout d'un Acteur </h1>  
     {{ form_start(f) }}    
     <table align="center">        
         <tr >            
            <td>{{form_label(f.nomActeur)}}</td>            
            <td>{{form_widget(f.nomActeur)}}</td>            
            <td>{{form_errors(f.nomActeur)}}</td>        
        </tr> 
         <tr>            
            <td>{{form_label(f.prenomActeur)}}</td>            
            <td>{{form_widget(f.prenomActeur)}}</td>            
            <td>{{form_errors(f.prenomActeur)}}</td>        
        </tr>        
        <tr>            
            <td>{{form_label(f.datenaissace)}}</td>            
            <td>{{form_widget(f.datenaissace)}}</td>            
            <td>{{form_errors(f.datenaissace)}}</td>        
        </tr>

        <tr>            
            <td>{{form_label(f.sexe)}}</td>            
            <td>{{form_widget(f.sexe)}}</td>            
            <td>{{form_errors(f.sexe)}}</td>        
        </tr>            

    </table> 
    <input type="submit" value="Ajouter un Acteur" align="center">   
    {{ form_end(f) }} 

    <table border="1" align="center">     
        <tr bgcolor="blue">       
            <th>ID </th> <th>NOM </th> <th>PRENOM </th> <th>DATE DE NAISSSANCE </th> <th>SEXE </th> <th>Mis a Jour </th> 
        </tr>   
        {% for a in acteurs %}        
        <tr>         
            <td>{{ a.ID }}</td>         
            <td>{{ a.nomActeur }}</td>    
            <td>{{ a.prenomActeur }}</td>      
            <td>{{ a.datenaissace|date("d/m/Y") }}</td> 
            <td>{{ a.sexe }}</td> 
                  
        </tr> 
       {% endfor %}   
    </table> 


